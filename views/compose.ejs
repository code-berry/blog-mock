<%- include('partials/header') %>

<div class="compose-holder">
	<h1 id="compose-header">Compose</h1>
	<form action="/compose" name="compositionForm" method="POST">
	  <div class="form-group">
	    <label for="h-title">Title</label>
	    <input type="text" class="form-control" id="h-title" name="postTitle" placeholder="Think of something cool!">
	  </div>
	  <div class="form-group">
	    <label for="h-author">Author</label>
	    <input type="text" class="form-control" id="h-author" name="postAuthor" placeholder="Who's the mastermind behind this one?">
	  </div>
	  <div class="form-group">
	    <label for="h-post">Post</label>
	    <textarea name="postBody" rows="4" class="form-control" id="h-post" placeholder="Speak your mind..."></textarea>
	  </div>
	  <button class="btn btn-primary" type="submit" name="button">Compose</button>
	</form>
</div>

<%- include('partials/footer') %>